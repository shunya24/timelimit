- if current_user.has_check?(shopping)
  .card_imagea{id: "check_#{shopping.id}"}
    = link_to shopping_check_path(shopping), method: :delete, remote: true do
      = image_tag 'checkbox.png'
- else
  .card_imagea{id: "check_#{shopping.id}"}
    = link_to shopping_check_path(shopping), method: :post, remote: true do
      = image_tag 'box.png'