.container
  = form_with(model: @food, local: true) do |f|
    %div
      = f.label :eyecatch, '画像'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :name, '食材名'
    %div
      = f.text_field :name
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    %div
      = f.label :limit, '消費期限'
    %div
      = f.date_select :limit, {use_month_numbers: true}
    %div
      = f.label :count, '数'
    %div
      = f.number_field :count
    = f.submit '保存'
